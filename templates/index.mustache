<div class="row">
  <div class="large-6 columns">
    <h2>Upload your audio file</h2>
    <form method="post" action="/" enctype='multipart/form-data' data-abide>
      <fieldset>

        <label for="audio">Description
          <input type="text" name="description" id="description">
        </label>      

        <label for="audio">Audio
          <input type="file" name="audio" id="audio" required>
          <small class="error">A wav file is required.</small>
        </label>

        <label>Output</label>
          <input type="radio" name="output" id="output-none" value="none" checked><label for="output-none">No output</label>
          <input type="radio" name="output" id="output-wav" value="wav"><label for="output-wav">WAV</label>
          <input type="radio" name="output" id="output-mp3" value="mp3"><label for="output-mp3">MP3</label>


        <label for="email">Email
          <input type="email" name="email" id="email" required>
          <small class="error">A valid email address is required.</small>
        </label>

        <label for="terms">
          <input type="checkbox" name="terms" id="terms" required>
          I agree to the terms and conditions
          <small class="error">You must agree to the terms and conditions</small>
        </label>

        <div class="large-12 columns">
          <button type="submit" name="upload" id="upload" value="upload">Upload</button>
        </div>
      </fieldset>
    </form>
  </div>
  <div class="large-6 columns">
    <h2>Recently processed</h2>
    <ol start="{{list_start}}" reversed>
      {{#audio}}
        <li>
          <a href="/report/{{id}}">
            {{description}}
          </a>
        </li>
      {{/audio}}
    </ol>
  </div>
</div>
