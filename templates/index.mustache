<div class="row">
  <div class="large-6 columns">
    <h2>Upload your audio file</h2>
    <form method="post" action="/" enctype='multipart/form-data' data-abide>
      <fieldset>

        <label for="audio"><h5>Description</h5>
          <input type="text" name="description" id="description">
        </label>      

        <label for="audio"><h5>Audio</h5>
          <input type="file" name="audio" id="audio" required>
          <small class="error">Please select an audio file</small>
        </label>

        <label><h5>Output</h5></label>
          <input type="radio" name="output" id="output-mp3" value="mp3" checked><label for="output-mp3">MP3 (compressed output is fine)</label><br>
          <input type="radio" name="output" id="output-wav" value="wav"><label for="output-wav">Source (don't compress my audio please)</label><br>
          <input type="radio" name="output" id="output-none" value="none"><label for="output-none">No output (just give me the report)</label>

        <label><h5>Detection</h5></label>          
          <input type="radio" name="detection" id="detection-wind" value="wind" checked><label for="detection-wind">Wind Noise</label><br>
          <input type="radio" name="detection" id="detection-distortion" value="distortion"><label for="detection-distortion  ">Distortion</label><br>
          <input type="radio" name="detection" id="detection-mic" value="mic" disabled><label for="detection-mic"><em>Microphone Handling Noise (Coming soon!)</em></label>

        <label for="email"><h5>Email</h5>
          <input type="email" name="email" id="email" required>
          <small class="error">A valid email address is required.</small>
        </label>

        <label for="terms">
          <input type="checkbox" name="terms" id="terms" required>
          I agree to the terms and conditions
          <small class="error">You must agree to the terms and conditions</small>
        </label>

        <div class="large-12 columns">
          <button type="submit" name="upload" id="upload" value="upload">Upload</button>
        </div>
      </fieldset>
    </form>
  </div>
  <div class="large-6 columns">
    <h2>Recently processed</h2>
    <ol start="{{list_start}}" reversed>
      {{#audio}}
        <li>
          <a href="/report/{{id}}">
            {{description}}
          </a>
        </li>
      {{/audio}}
    </ol>
  </div>
</div>
